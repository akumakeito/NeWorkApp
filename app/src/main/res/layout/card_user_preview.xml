<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="@android:color/transparent"
    app:cardCornerRadius="20dp"
    android:id="@+id/card"
    app:strokeWidth="1dp">

<LinearLayout
    android:layout_width="@dimen/mentioned_users_list"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="@dimen/common_spacing">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/small_avatar"
        android:scaleType="fitCenter"
        android:layout_height="@dimen/avatar_size"
        android:layout_marginEnd="@dimen/small_spacing"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/author_name"
        android:layout_marginStart="@dimen/small_spacing"
        android:textSize="@dimen/small_author_name_text_size"
        android:ellipsize="end"
        android:layout_gravity="center"
        android:singleLine="true"/>

    <ImageButton
        android:id="@+id/remove_mention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/secondary_text"
        android:contentDescription="@string/remove"
        android:src="@drawable/cancel_ic"
        tools:ignore="TouchTargetSizeCheck,UseAppTint"
        android:tint="@color/primary_dark"
        android:layout_margin="@dimen/small_spacing"
        android:layout_gravity="center_vertical"/>



</LinearLayout>

</com.google.android.material.card.MaterialCardView>